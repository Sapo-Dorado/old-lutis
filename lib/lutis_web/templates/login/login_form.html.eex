<%= form_for @conn, @action, [method: :post, as: :user], fn f -> %>
  <div class="form-group">
    <%= text_input f, :email, placeholder: "Email" %>
    <br>
    <br>
    <%= password_input f, :password, placeholder: "Password", class: "password-input" %>
    <br>
    <br>
    <%= submit "Login", class: "btn btn-a round" %>
  </div>
<% end %>
