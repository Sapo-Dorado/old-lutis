<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <%= label f, :recipient %>
  <%= text_input f, :recipient %>
  <br>
  <%= error_tag f, :user2 %>
  <%= error_tag f, :user1 %>

  <div>
    <%= submit "Save", class: "btn btn-a round" %>
  </div>
<% end %>
